<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lurnly - Upgrade Your Skill</title>
    <link rel="icon" href="/assets/images/Lurnly Logo - Original - 5000x5000.png" type="image/x-icon">
    <link rel="stylesheet" href="assets/css/login.css">
</head>
<body>
    <div class="container">
        <div class="box">
            <!-- Form Section -->
            <div class="form-container">
                <h2 class="title">Login to Your <span class="highlight">Account</span></h2>
                <p class="subtitle">Welcome back! Please enter your details.</p>
                <form id="loginForm">
                    <label>Email</label>
                    <input type="email" id="loginEmail" class="input" placeholder="Enter your email" required>
                    
                    <label>Password</label>
                    <div class="password-container">
                        <input type="password" id="loginPassword" class="input" placeholder="Enter your password" required>
                    </div>

                    <button type="submit" class="button">Login</button>
                </form>

                <p class="text-link">Don't have an account? <a href="/register">Register</a></p>
            </div>

            <!-- Image Section -->
            <div class="image-container">
                <img src="https://i.pinimg.com/736x/53/f9/ef/53f9efc0be86bf002e68e5d71e9f2d6c.jpg" alt="Cute bunny" class="image">
            </div>
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const email = document.getElementById('loginEmail').value.trim();
            const password = document.getElementById('loginPassword').value.trim();

            if (!email || !password) {
                e.preventDefault();
                alert("Please fill in both email and password.");
            } else {
                // Redirect ke home (simulasi)
                window.location.href = "/home";
                e.preventDefault(); // hapus baris ini kalau sudah pakai backend
            }
        });
    </script>
</body>
</html>
