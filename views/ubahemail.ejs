<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Lurnly - Upgrade Your Skill</title>

  <!-- Google Font: Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet"/>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Custom CSS -->
  <link rel="stylesheet" href="assets/css/ubahemail.css"/>
</head>
<body>

  <div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100">
      <div class="col-12 col-md-10 col-lg-8 mx-auto"> <!-- Lebih lebar di sini -->
        <div class="card p-5 shadow ubah-email-card">
          <h2 class="text-center mb-4 fw-semibold">Ubah Email</h2>
          <form action="proses-ubah-email.php" method="POST" class="form-ubah-email">
            <div class="mb-3">
              <label for="currentEmail" class="form-label">Email Lama</label>
              <input type="email" class="form-control" id="currentEmail" name="currentEmail" placeholder="Masukkan email lama" required>
            </div>
            <div class="mb-3">
              <label for="newEmail" class="form-label">Email Baru</label>
              <input type="email" class="form-control" id="newEmail" name="newEmail" placeholder="Masukkan email baru" required>
            </div>
            <div class="mb-4">
              <label for="confirmEmail" class="form-label">Konfirmasi Email Baru</label>
              <input type="email" class="form-control" id="confirmEmail" name="confirmEmail" placeholder="Konfirmasi email baru" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 fw-semibold">Ubah Email</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.querySelector('.form-ubah-email');
      const newEmail = document.getElementById('newEmail');
      const confirmEmail = document.getElementById('confirmEmail');
  
      form.addEventListener('submit', function (e) {
        if (newEmail.value !== confirmEmail.value) {
          e.preventDefault(); // Stop submit
          alert('Email baru dan konfirmasi email tidak cocok!');
          confirmEmail.focus();
        } else {
          // Email cocok, form lanjut ke proses PHP
          // Optional: tampilkan notifikasi sukses ringan (misalnya untuk UX)
          // alert('Email cocok! Data akan diproses...');
        }
      });
    });
  </script>
  
  
</body>
</html>
